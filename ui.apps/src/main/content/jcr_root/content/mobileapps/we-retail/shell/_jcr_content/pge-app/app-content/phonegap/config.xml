        <splash src="res/screens/android/screen-mdpi-landscape.png" platform="android" qualifier="land-mdpi" />
        <splash src="res/screens/android/screen-mdpi-portrait.png" platform="android" qualifier="port-mdpi" />
        <splash src="res/screens/android/screen-xhdpi-landscape.png" platform="android" qualifier="land-xhdpi" />
        <splash src="res/screens/android/screen-xhdpi-portrait.png" platform="android" qualifier="port-xhdpi" />
    </platform>

    <engine name="ios" spec="^4.0.0" />
    <engine name="android" spec="^5.0.0" />

</widget>
